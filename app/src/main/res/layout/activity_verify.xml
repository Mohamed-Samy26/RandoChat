<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bg_verify"
    android:background="@drawable/bg_gradient"
    android:theme="@style/Theme.RandoChat.NoActionBar"
    android:orientation="vertical"
    tools:context=".ui.login.Verify">

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginVertical="@dimen/_64sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="@dimen/_25ssp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:text="Verification code"
        android:textColor="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="18sp"
        android:layout_marginBottom="0dp"
        android:layout_gravity="center"
        android:text="Please Enter the verification code"

        android:textColor="#777777" />




    <com.chaos.view.PinView

        android:id="@+id/otp_edittxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:itemRadius="@dimen/_10sdp"
        app:itemCount="6"
        app:lineColor="@color/md_theme_dark_secondaryContainer"
        app:viewType="rectangle"
        style="@style/PinWidget.PinView"
        android:cursorVisible="true"
        android:textAlignment="center"
        android:inputType="number"
        android:maxLines="1"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:layout_marginVertical="@dimen/_24sdp"
        android:textSize="@dimen/_20ssp"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter 6-didgit code"
        android:layout_gravity="center"
        android:textSize="17dp"
        />

    <Button
        android:id="@+id/verifybtn"
        android:layout_width="152dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/md_theme_light_secondaryContainer"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Verify"
        android:textColor="@color/black"
        android:textAllCaps="false" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:outlineAmbientShadowColor="@color/black"
        android:visibility="invisible"
        />


</LinearLayout>